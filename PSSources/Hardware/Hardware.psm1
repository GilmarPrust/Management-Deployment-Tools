function Get-Network {

    <#
        .DESCRIPTION
        Return Name, MacAddress, IPAddress

        .OUTPUTS
        MacAddress format [00:00:00:00:00:00]
    #>
    $adapter = Get-CimInstance -ClassName Win32_NetworkAdapter | Where-Object { 
        $_.NetConnectionStatus -eq 2 -and 
        $_.PhysicalAdapter -eq $true -and 
        $_.NetEnabled -eq $true
    }

    $network = New-Object -TypeName PSObject

    ### Disable ipV6.
    Get-NetAdapterBinding -ComponentID 'ms_tcpip6' |
        Where-Object -Property Enabled -eq -Value $true |
        Disable-NetAdapterBinding

    ### Dar preferencia para Ethernet, se wi-fi tambem estiver conectado.
    if ($adapter.Count -gt 1)  {
        $adapter = $adapter | Where-Object { $_.NetConnectionID -eq "Ethernet" }
    }

    if ($null -eq $adapter) { Write-Host "Network adapter not found." -ForegroundColor Red }

    $config_ = Get-CimInstance -ClassName Win32_NetworkAdapterConfiguration | Where-Object { $_.Index -eq $adapter.DeviceID }
    
    $network | Add-Member -MemberType NoteProperty -Name Name -Value $adapter.Name
    $network | Add-Member -MemberType NoteProperty -Name MACAddress -Value $adapter.MACAddress
    $network | Add-Member -MemberType NoteProperty -Name IPAddress -Value ($config_.IPAddress | Select-Object -Unique)

    return $network
}

function Get-Hardware {
    <#
        .DESCRIPTION
        Return SerialNumber,Manufacturer,Model,Type
    #>
    $bios = Get-CimInstance -ClassName Win32_BIOS
    $computersystem = (Get-CimInstance -ClassName Win32_ComputerSystem)

    $hardware = New-Object -TypeName PSObject
    $hardware | Add-Member -MemberType NoteProperty -Name SerialNumber -Value $bios.SerialNumber
    $hardware | Add-Member -MemberType NoteProperty -Name Manufacturer -Value $computersystem.Manufacturer
    $hardware | Add-Member -MemberType NoteProperty -Name Model -Value $computersystem.Model
    $hardware | Add-Member -MemberType NoteProperty -Name Type -Value "" #$computersystem.Type
    $hardware | Add-Member -MemberType NoteProperty -Name Network -Value (Get-Network)

    return $hardware
    
}



