namespace API.Host.Helpers
{
    public static class DbContextRegistrationExtensions
    {
        public static IServiceCollection AddDbContextRegistration(this IServiceCollection services, IConfiguration configuration)
        {
            services.AddDbContext<AppDbContext>(options =>
                options.UseSqlite(configuration.GetConnectionString("DefaultConnection"),
                    sqliteOptions => sqliteOptions.MigrationsAssembly(typeof(AppDbContext).Assembly.FullName)));
            return services;
        }
    }
}
