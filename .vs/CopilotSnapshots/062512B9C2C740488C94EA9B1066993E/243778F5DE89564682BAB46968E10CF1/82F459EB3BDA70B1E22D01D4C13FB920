using System;
using System.Collections.Generic;
using System.ComponentModel.DataAnnotations;

namespace DCM.Core.Entities
{
    /// <summary>
    /// Representa um inventário vinculado a um dispositivo.
    /// </summary>
    public class Inventory : BaseEntity
    {
        /// <summary>
        /// ID do dispositivo ao qual o inventário está vinculado.
        /// </summary>
        [Required]
        public Guid DeviceId { get; set; }

        /// <summary>
        /// Dispositivo associado ao inventário.
        /// </summary>
        public virtual Device Device { get; set; }

        /// <summary>
        /// Dados de hardware do inventário (ex: processador, memória, fabricante).
        /// </summary>
        public virtual ICollection<InventoryHardware> Hardware { get; set; } = new List<InventoryHardware>();

        /// <summary>
        /// Construtor vazio para o Entity Framework.
        /// </summary>
        public Inventory() { }
    }

    /// <summary>
    /// Representa um item de hardware do inventário.
    /// </summary>
    public class InventoryHardware : BaseEntity
    {
        /// <summary>
        /// Chave do item de hardware (ex: "CPU", "RAM").
        /// </summary>
        [Required, StringLength(100)]
        public string Key { get; set; }

        /// <summary>
        /// Valor do item de hardware (ex: "Intel i7", "16GB").
        /// </summary>
        [Required, StringLength(250)]
        public string Value { get; set; }

        /// <summary>
        /// ID do inventário ao qual este item pertence.
        /// </summary>
        [Required]
        public Guid InventoryId { get; set; }

        /// <summary>
        /// Inventário associado a este item de hardware.
        /// </summary>
        public virtual Inventory Inventory { get; set; }

        /// <summary>
        /// Construtor vazio para o Entity Framework.
        /// </summary>
        public InventoryHardware() { }
    }
}
